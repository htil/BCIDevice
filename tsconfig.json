{
	"compilerOptions": {
		"module": "esNext",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"declaration": true,
		"declarationDir": ".",
		"sourceMap": true,
		"outDir": "dest",
		"moduleResolution": "node",
		"lib": [
			"es2018",
			"dom"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"typedocOptions": {
		"out": "docs",
		"mode": "modules"
	}
}